    <section id="jogo">
        <h2>üêç Joguinho da Cobrinha</h2>
        <canvas id="snake" width="400" height="400"></canvas>
        <p style="margin-top:10px;">Use as setas do teclado para jogar!</p>
    </section>

    <footer>
        <p>Feito com üíñ por Jeniffer - 2025</p>
    </footer>

    <script>
        const canvas = document.getElementById("snake");
        const ctx = canvas.getContext("2d");

        const box = 20;
        let snake = [{ x: 9 * box, y: 10 * box }];
        let direction;
        let food = {
            x: Math.floor(Math.random() * 19 + 1) * box,
            y: Math.floor(Math.random() * 19 + 1) * box
        };
        let score = 0;

        document.addEventListener("keydown", directionHandler);

        function directionHandler(event) {
            if (event.keyCode == 37 && direction != "RIGHT") direction = "LEFT";
            else if (event.keyCode == 38 && direction != "DOWN") direction = "UP";
            else if (event.keyCode == 39 && direction != "LEFT") direction = "RIGHT";
            else if (event.keyCode == 40 && direction != "UP") direction = "DOWN";
        }

        function draw() {
            ctx.fillStyle = "#111";
            ctx.fillRect(0, 0, 400, 400);

            for (let i = 0; i < snake.length; i++) {
                ctx.fillStyle = i == 0 ? "#7b2ff7" : "#f107a3";
                ctx.fillRect(snake[i].x, snake[i].y, box, box);
                ctx.strokeStyle = "#fff";
                ctx.strokeRect(snake[i].x, snake[i].y, box, box);
            }

            ctx.fillStyle = "#ffe97f";
            ctx.fillRect(food.x, food.y, box, box);

            let snakeX = snake[0].x;
            let snakeY = snake[0].y;

            if (direction == "LEFT") snakeX -= box;
            if (direction == "UP") snakeY -= box;
            if (direction == "RIGHT") snakeX += box;
            if (direction == "DOWN") snakeY += box;

            if (snakeX == food.x && snakeY == food.y) {
                score++;
                food = {
                    x: Math.floor(Math.random() * 19 + 1) * box,
                    y: Math.floor(Math.random() * 19 + 1) * box
                };
            } else {
                snake.pop();
            }

            let newHead = { x: snakeX, y: snakeY };

            if (
                snakeX < 0 ||
                snakeY < 0 ||
                snakeX >= 400 ||
                snakeY >= 400 ||
                collision(newHead, snake)
            ) {
                clearInterval(game);
                ctx.fillStyle = "#fff";
                ctx.font = "25px Poppins";
                ctx.fillText("üíÄ Fim de jogo!", 120, 200);
                ctx.fillText("Pontua√ß√£o: " + score, 130, 240);
                return;
            }

            snake.unshift(newHead);

            ctx.fillStyle = "#fff";
            ctx.font = "18px Poppins";
            ctx.fillText("Pontua√ß√£o: " + score, 10, 20);
        }

        function collision(head, array) {
            for (let i = 0; i < array.length; i++) {
                if (head.x == array[i].x && head.y == array[i].y) {
                    return true;
                }
            }
            return false;
        }

        let game = setInterval(draw, 120);
    </script>
